{
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "name": "proto",
  "projectType": "library",
  "targets": {
    "gen": {
      "inputs": ["protoFiles"],
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/pkg/pb",
        "!{workspaceRoot}/pkg/pb/project.json",
        "{workspaceRoot}/packages/notopia-pb",
        "!{workspaceRoot}/packages/notopia-pb/project.json",
        "!{workspaceRoot}/packages/notopia-pb/package.json"
      ],
      "options": {
        "command": "buf generate"
      }
    },
    "lint": {
      "inputs": ["protoFiles"],
      "executor": "nx:run-commands",
      "options": {
        "command": "buf lint"
      }
    }
  }
}
