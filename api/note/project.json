{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "api/note",
  "projectType": "application",
  "targets": {
    "bundle:yaml": {
      "executor": "nx:run-commands",
      "options": {
        "command": "redocly bundle note --config ../redocly.yaml -o ./dist/openapi.yaml",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist/openapi.yaml"],
      "inputs": ["openapiFiles"]
    },
    "bundle:json": {
      "executor": "nx:run-commands",
      "options": {
        "command": "redocly bundle note --config ../redocly.yaml -o ./dist/openapi.json",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist/openapi.json"],
      "inputs": ["openapiFiles"]
    },
    "build": {
      "dependsOn": ["bundle:yaml", "bundle:json"]
    },
    "watch-bundle:json": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm nx watch --projects=api/note -- pnpm nx bundle:json \\$NX_PROJECT_NAME",
        "forwardAllArgs": false,
        "cwd": "{projectRoot}"
      },
      "continuous": true
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "scalar document serve -w ./dist/openapi.json --port 9081",
        "forwardAllArgs": false,
        "cwd": "{projectRoot}"
      },
      "continuous": true,
      "dependsOn": ["bundle:json", "watch-bundle:json"]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "scalar document serve ./dist/openapi.json --port 9081",
        "cwd": "{projectRoot}"
      },
      "continuous": true,
      "dependsOn": ["bundle:json"]
    },
    "mock": {
      "executor": "nx:run-commands",
      "options": {
        "command": "scalar document mock -w ./dist/openapi.json --port 8081",
        "cwd": "{projectRoot}"
      },
      "continuous": true,
      "dependsOn": ["bundle:json"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "redocly lint note --config ../redocly.yaml",
        "cwd": "{projectRoot}"
      },
      "inputs": ["openapiFiles"]
    },
    "gen:go": {
      "inputs": ["{projectRoot}/oapi-codegen.yaml"],
      "outputs": ["{workspaceRoot}/pkg/api/gen/note.gen.go"],
      "executor": "nx:run-commands",
      "options": {
        "command": "oapi-codegen --config ./oapi-codegen.yaml ./dist/openapi.yaml",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["bundle:yaml"]
    },
    "gen:ts": {
      "outputs": ["{workspaceRoot}/packages/notopia-api/src/note.d.ts"],
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec openapi-typescript ./dist/openapi.json --output ../../packages/notopia-api/src/note.d.ts",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["bundle:json"]
    },
    "gen": {
      "dependsOn": ["gen:go", "gen:ts"]
    }
  }
}
