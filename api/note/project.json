{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "api/note",
  "projectType": "application",
  "targets": {
    "build:yaml": {
      "executor": "nx:run-commands",
      "options": {
        "command": "redocly bundle note --config ../redocly.yaml -o ./dist/openapi.yaml",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist/openapi.yaml"],
      "inputs": ["openapiSpec"]
    },
    "build:json": {
      "executor": "nx:run-commands",
      "options": {
        "command": "redocly bundle note --config ../redocly.yaml -o ./dist/openapi.json",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist/openapi.json"],
      "inputs": ["openapiSpec"]
    },
    "build": {
      "dependsOn": ["build:yaml", "build:json"]
    },
    "watch-build:json": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm nx watch --projects=api/note -- pnpm nx build:json \\$NX_PROJECT_NAME",
        "forwardAllArgs": false,
        "cwd": "{projectRoot}"
      },
      "continuous": true
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "scalar document serve -w ./dist/openapi.json --port 9081",
        "forwardAllArgs": false,
        "cwd": "{projectRoot}"
      },
      "continuous": true,
      "dependsOn": ["build:json", "watch-build:json"]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "scalar document serve ./dist/openapi.json --port 9081",
        "cwd": "{projectRoot}"
      },
      "continuous": true,
      "dependsOn": ["build:json"]
    },
    "mock": {
      "executor": "nx:run-commands",
      "options": {
        "command": "scalar document mock -w ./dist/openapi.json --port 8081",
        "cwd": "{projectRoot}"
      },
      "continuous": true,
      "dependsOn": ["build:json"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "redocly lint note --config ../redocly.yaml",
        "cwd": "{projectRoot}"
      },
      "inputs": ["openapiSpec"]
    }
  }
}
