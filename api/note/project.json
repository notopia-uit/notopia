{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "api/note",
  "projectType": "application",
  "namedInputs": {
    "spec": [
      "{projectRoot}/**/*.yaml",
      "{projectRoot}/**/*.md",
      "!{projectRoot}/**/README.md",
      "{projectRoot}/../shared/**/*.yaml",
      "{projectRoot}/../shared/**/*.md"
    ]
  },
  "targets": {
    "build:yaml": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm redocly bundle note -o ./dist/note.openapi.yaml",
        "cwd": "{projectRoot}/../"
      },
      "outputs": ["{projectRoot}/../dist/note.openapi.yaml"],
      "inputs": ["spec"]
    },
    "build:json": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm redocly bundle note -o ./dist/note.openapi.json",
        "cwd": "{projectRoot}/../"
      },
      "outputs": ["{projectRoot}/../dist/note.openapi.json"],
      "inputs": ["spec"]
    },
    "build": {
      "executor": "nx:noop",
      "dependsOn": ["build:yaml", "build:json"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm redocly lint note --config ./redocly.yaml",
        "cwd": "{projectRoot}/../"
      },
      "inputs": ["spec"]
    }
  }
}
