{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "api/note",
  "projectType": "application",
  "targets": {
    "build:yaml": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm redocly bundle note --config ../redocly.yaml -o ./dist/openapi.yaml",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist/openapi.yaml"],
      "inputs": ["openapiSpec"]
    },
    "build:json": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm redocly bundle note --config ../redocly.yaml -o ./dist/openapi.json",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist/openapi.json"],
      "inputs": ["openapiSpec"]
    },
    "build": {
      "dependsOn": ["build:yaml", "build:json"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm redocly lint note --config ../redocly.yaml",
        "cwd": "{projectRoot}"
      },
      "inputs": ["openapiSpec"]
    }
  }
}
