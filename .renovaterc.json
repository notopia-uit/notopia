{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>notopia-uit/renovate-config",
    ":automergeBranch",
    ":automergePatch"
  ],
  "packageRules": [
    {
      "groupName": "Nx Monorepo Toolkit",
      "matchPackagePatterns": ["^@nx/", "^nx$"],
      "matchPackageNames": ["nx"],
      "automerge": false,
      "description": "Group all Nx packages to prevent version mismatch and allow manual migration. Note that renovate still create PRs for minor/major updates, but they will not be automerged."
    }
  ],
  "docker-compose": {
    "managerFilePatterns": [
      "/(^|/)(?:docker-)?compose[^/]*\\.ya?ml$/",
      "^deploy/compose/.+\\.yaml$"
    ]
  },
  "schedule": ["* 1-18 * * 3,0"]
}
