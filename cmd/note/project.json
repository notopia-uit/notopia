{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "note",
  "projectType": "application",
  "targets": {
    "gen:wire": {
      "executor": "nx:run-commands",
      "options": {
        "command": "wire",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "build": {
      "executor": "nx:run-commands",
      "inputs": ["goFiles"],
      "outputs": ["{projectRoot}/dist/note"],
      "options": {
        "command": "go build -o ./dist/note .",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["gen:wire", "^gen*", "^build*"]
    },
    "preview": {
      "executor": "nx:run-commands",
      "inputs": ["goFiles"],
      "options": {
        "command": "./dist/note",
        "cwd": "{projectRoot}",
        "tty": true
      },
      "continuous": true,
      "dependsOn": ["build"]
    },
    "run": {
      "executor": "nx:run-commands",
      "inputs": ["goFiles"],
      "options": {
        "command": "go run -gcflags='all=-N -l' .",
        "cwd": "{projectRoot}",
        "tty": true
      },
      "continuous": true
    },
    "serve": {
      "dependsOn": ["run"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "inputs": ["goFiles"],
      "options": {
        "command": "golangci-lint run .",
        "cwd": "{projectRoot}"
      },
      "parallelism": false
    },
    "tidy": {
      "executor": "nx:run-commands",
      "inputs": ["goFiles"],
      "options": {
        "command": "go mod tidy",
        "cwd": "{projectRoot}"
      }
    },
    "docker:build": {
      "inputs": ["goFiles"]
    },
    "docker:run": {
      "inputs": ["goFiles"]
    }
  },
  "implicitDependencies": ["pkg/noteopenapi", "pkg/note", "pkg/pb"]
}
