{
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "name": "page",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/",
          "mkdir -p dist",
          "mkdir -p dist/api",
          "cp -a ../docs/.vitepress/dist/. dist/",
          "cp -a ../packages/notopia-api-web/dist/. dist/api/"
        ],
        "parallel": false,
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build"]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm preview"],
        "cwd": "{projectRoot}"
      },
      "continuous": true,
      "dependsOn": ["build"]
    },
    "deploy": {
      "executor": "nx-github-pages:deploy",
      "dependsOn": ["build"],
      "cache": true
    }
  },
  "implicitDependencies": ["docs", "packages/notopia-api-web"]
}
