{
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "name": "page",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p dist",
          "rm -rf dist/*",
          "cp -r ../docs/.vitepress/dist/. dist/"
        ],
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build"]
    },
    "deploy": {
      "executor": "nx-github-pages:deploy",
      "dependsOn": ["build"]
    }
  },
  "implicitDependencies": ["docs"]
}
